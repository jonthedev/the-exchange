{
  "name": "crypto-exchange",
  "private": true,
  "workspaces": [
    "frontend",
    "mock_backend"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:frontend": "npm run dev -w frontend",
    "dev:backend": "npm run dev -w mock_backend",
    "setup": "npm install && cd frontend && npm install && cd ../mock_backend && npm install",
    "clean": "rm -rf node_modules && rm -rf frontend/node_modules && rm -rf mock_backend/node_modules",
    "prepare": "husky install",
    "postinstall": "husky install .husky",
    "test:e2e": "npm-run-all --parallel --race dev:backend frontend:e2e",
    "frontend:e2e": "npm run test:e2e:dev -w frontend"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "npm-run-all": "^4.1.5"
  }
}
